<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SonRise.LoginPage"
             BackgroundColor="LightSkyBlue">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightSkyBlue" Margin="10,30,10,20" Padding="10">
            <Entry Text="Username"></Entry>
            <Entry Text="Password">
            </Entry>

            <Button Text="Login" Clicked="Login_Handle"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>